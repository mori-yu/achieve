<div class="container">
    <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(@user) %>
        <%= @user.email %>
        <div class="followed_user">
            <h4>フォロー</h4>
            <% @user.followed_users.each do |followed_user| %>
                <%= profile_img(followed_user) %>
                <%= followed_user.email %>
            <% end %>
        </div>
        <div class="followers">
            <h4>フォロワー</h4>
            <% @user.followers.each do |followers| %>
                <%= profile_img(followers) %>
                <%= followers.email %>
            <% end %>
        </div>
    </div>
</div>